<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F4F4F5"
    android:paddingVertical="@dimen/spaceMedium">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInspectionTitle"
        style="@style/TextGroupHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spaceMedium"
        android:paddingStart="@dimen/spaceXSmall"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivExpend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sheet 1 of 15 Section view AA-AA  A1   Zone I - P , 18 - 23" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExpend"
        android:layout_width="@dimen/IconExpendSize"
        android:layout_height="@dimen/IconExpendSize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/baseline_arrow_drop_down_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
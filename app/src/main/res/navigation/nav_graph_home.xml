<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/profile"
        android:name="com.pxy.visaz.ui.profile.ProfileFragment"
        android:label="@string/label_profile" />

    <fragment
        android:id="@+id/home"
        android:name="com.pxy.visaz.ui.home.VisasFragment"
        android:label="Home"
        tools:layout="@layout/fragment_visas">
        <action
            android:id="@+id/action_visasFragment_to_details"
            app:destination="@id/visaDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pxy.visaz.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_visas" />

    <fragment
        android:id="@+id/visaDetailsFragment"
        android:name="com.pxy.visaz.ui.home.VisaDetailsFragment"
        android:label="Visa Details"
        tools:layout="@layout/fragment_visa_details">
        <action
            android:id="@+id/action_visaDetailsFragment_to_visaSubmitFormFragment"
            app:destination="@id/visaSubmitFormFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/visaSubmitFormFragment"
        android:name="com.pxy.visaz.ui.applyvisa.VisaSubmitFormFragment"
        android:label="Visa Submit Form"
        tools:layout="@layout/fragment_visa_submit_form">
        <action
            android:id="@+id/action_visaSubmitFormFragment_to_visaImagesUploadFragment"
            app:destination="@id/visaImagesUploadFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/visaImagesUploadFragment"
        android:name="com.pxy.visaz.ui.applyvisa.VisaImagesUploadFragment"
        android:label="Visa Images Upload"
        tools:layout="@layout/fragment_visa_images_upload">
        <action
            android:id="@+id/action_visaImagesUploadFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/applyVisaSubmitFormFragment"
        android:name="com.pxy.visaz.ui.applyvisa.ApplyVisasListFragment1"
        android:label="Apply Visa Submit Form"
        tools:layout="@layout/fragment_apply_visas_list">
        <action
            android:id="@+id/action_applyVisaSubmitFormFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

    </fragment>

</navigation>
